<?xml version="1.0" encoding="utf-8"?>

<dong.lan.base.ui.customView.RelativeCarView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    app:rcv_backgroundColor="#ffffff"
    app:rcv_elevation="6dp"
    android:padding="8dp"
    app:rcv_marginX="10dp"
    app:rcv_marginY="10dp"
    app:rcv_elevationColor="@color/avoscloud_blue"
    app:rcv_radius="6dp">

    <dong.lan.library.LabelTextView
        android:id="@+id/item_feed_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:minHeight="30dp"
        android:textColor="@color/avoscloud_blue"
        android:textSize="16sp"
        app:bg_color="#ffffffff" />

    <TextView
        android:layout_below="@id/item_feed_label"
        android:id="@+id/item_feed_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="18sp" />

    <ImageView
        android:layout_below="@id/item_feed_content"
        android:id="@+id/item_feed_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside" />

    <dong.lan.library.LabelTextView
        android:layout_marginBottom="10dp"
        android:layout_below="@id/item_feed_image"
        android:id="@+id/unFavorite"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:text="取消收藏"
        android:textColor="@color/main_text_color"
        android:textSize="16sp"
        app:bg_color="@color/main_text_color"
        app:radius="8dp"
        app:strokeWidth="1dp" />

</dong.lan.base.ui.customView.RelativeCarView>